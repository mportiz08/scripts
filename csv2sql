#!/usr/bin/env ruby
file = ARGV[0]
table = File.basename(file, '.csv')

STDOUT.print "enter dataset name: "
dataset = STDIN.gets.strip

csv = File.open(file).readlines
csv.shift

File.open(File.join('.', "#{dataset}-build-#{table}.sql"), 'w') do |sql|
  sql.write "-- this file was generated by Marcus's csv2sql script\n"
  csv.each do |row|
    sql.write "INSERT INTO #{table.capitalize} VALUES(#{row.strip});\n"
  end
end
